      "name": "[format('ag-{0}', variables('resourceNamePrefix'))]",
      "location": "global",
      "tags": "[parameters('tags')]",
      "properties": {
        "groupShortName": "KittenAPI",
        "enabled": true,
        "armRoleReceivers": [],
        "automationRunbookReceivers": [],
        "azureAppPushReceivers": [],
        "azureFunctionReceivers": [],
        "emailReceivers": [],
        "eventHubReceivers": [],
        "itsmReceivers": [],
        "logicAppReceivers": [],
        "smsReceivers": [],
        "voiceReceivers": [],
        "webhookReceivers": []
      }
    },
    {
