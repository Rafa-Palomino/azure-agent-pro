        "autoMitigate": true
      },
      "dependsOn": [
        "[resourceId('Microsoft.Insights/actionGroups', format('ag-{0}', variables('resourceNamePrefix')))]",
        "[resourceId('Microsoft.Insights/components', variables('appInsightsName'))]"
      ]
